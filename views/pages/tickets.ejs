<div class="jumbotron text-center">
    <h1>All Tickets</h1>
</div>

<div id="add-event">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addEventModal">Add Ticket</button>
</div>

<div class="modal fade" id="addEventModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Ticket</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" action="/add">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="link" placeholder="Ticket Number">
                    </div>
                    <div class="form-group">
                        <label for="status">Status</label>
                        <select class="form-control" name="status" id="status">
                            <option>Open</option>
                            <option>In Progress</option>
                            <option>In Peer Review</option>
                            <option>Ready for QA</option>
                            <option>In QA</option>
                            <option>Ready For Release</option>
                            <option>Released</option>
                            <option>Closed</option>
                        </select>
                    </div>
                    <div class="text-right">
                        <input type="submit" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<table class="table table-bordered table-hover table-striped">
    <thead>
    <tr>
        <th>Ticket Name</th>
        <th>Link</th>
        <th>Status</th>
        <th></th>
    </tr>
    </thead>

    <tbody>

    <% for (var ticket of tickets) { %>
    <tr onclick="window.location.href = '/tickets/<%= ticket.slug %>'">
        <td><%= ticket.name %></td>
        <td><a href="<%= ticket.link %>"><%= ticket.link %></a></td>
        <td><%= ticket.status %></td>
        <td>
            <a href="/tickets/edit/<%= ticket.slug %>" class="btn btn-sm btn-info">Edit</a>
            <a href="/tickets/delete/<%= ticket.slug %>" class="btn btn-sm btn-danger">Remove</a>
        </td>
    </tr>
    <% } %>

    </tbody>
</table>